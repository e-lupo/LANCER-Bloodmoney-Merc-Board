{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lancer-job-board.local/schemas/job.schema.json",
  "title": "Job",
  "description": "A job posting in the LANCER Bloodmoney Merc Board system",
  "type": "object",
  "required": [
    "id",
    "name",
    "rank",
    "jobType",
    "description",
    "clientBrief",
    "currencyPay",
    "state",
    "factionId"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (UUID)",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "description": "Job name",
      "minLength": 1
    },
    "rank": {
      "type": "number",
      "description": "Job difficulty (1-3 stars)",
      "minimum": 1,
      "maximum": 3,
      "multipleOf": 1
    },
    "jobType": {
      "type": "string",
      "description": "Type/category of job",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Job objective/description (can be empty)"
    },
    "clientBrief": {
      "type": "string",
      "description": "Additional client information (can be empty)"
    },
    "currencyPay": {
      "type": "string",
      "description": "Payment amount (e.g., '100m')",
      "minLength": 1
    },
    "additionalPay": {
      "type": "string",
      "description": "Additional payment details (optional)"
    },
    "emblem": {
      "type": "string",
      "description": "SVG filename from logo_art directory (optional, empty string for no emblem)",
      "pattern": "^([A-Za-z0-9_-]+\\.svg)?$"
    },
    "state": {
      "type": "string",
      "description": "Job state",
      "enum": [
        "Pending",
        "Active",
        "Complete",
        "Failed",
        "Ignored"
      ],
      "default": "Pending"
    },
    "factionId": {
      "type": "string",
      "description": "UUID of associated faction (optional, empty string if none)",
      "pattern": "^(|[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})$"
    }
  },
  "additionalProperties": false
}